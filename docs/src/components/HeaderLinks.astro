---
import Default from '@astrojs/starlight/components/SocialIcons.astro';

const REPO = 'kondaurovDev/effortless-aws';
let stars = 0;
try {
  const res = await fetch(`https://api.github.com/repos/${REPO}`, {
    headers: { Accept: 'application/vnd.github.v3+json' },
  });
  if (res.ok) {
    const data = await res.json();
    stars = data.stargazers_count ?? 0;
  }
} catch {}
---
<a href="/why-effortless/" class="header-doc-link">Docs</a>
<a
  href={`https://github.com/${REPO}`}
  class="gh-stars"
  target="_blank"
  rel="noopener"
  data-stars={stars}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 16 16"
    width="16"
    height="16"
    fill="currentColor"
    aria-hidden="true"
  >
    <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
  </svg>
  <span class="gh-stars-label">Star</span>
  <span class="gh-stars-divider"></span>
  <span class="gh-stars-count">{stars}</span>
</a>
<Default {...Astro.props} />

<script>
  const CACHE_KEY = 'gh-stars-cache';
  const CACHE_TTL = 3600_000; // 1 hour

  function getCached(): { count: number; ts: number } | null {
    try {
      const raw = localStorage.getItem(CACHE_KEY);
      if (!raw) return null;
      return JSON.parse(raw);
    } catch {
      return null;
    }
  }

  async function refreshStars() {
    const el = document.querySelector('.gh-stars-count');
    if (!el) return;

    const cached = getCached();
    if (cached && Date.now() - cached.ts < CACHE_TTL) {
      el.textContent = String(cached.count);
      return;
    }

    try {
      const res = await fetch('https://api.github.com/repos/kondaurovDev/effortless-aws', {
        headers: { Accept: 'application/vnd.github.v3+json' },
      });
      if (!res.ok) return;
      const data = await res.json();
      const count = data.stargazers_count ?? 0;
      el.textContent = String(count);
      localStorage.setItem(CACHE_KEY, JSON.stringify({ count, ts: Date.now() }));
    } catch {}
  }

  refreshStars();
</script>

<style>
  .header-doc-link {
    color: var(--sl-color-white);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
  }
  .header-doc-link:hover {
    color: var(--sl-color-text-accent);
  }

  .gh-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-white);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 2rem;
    transition: border-color 0.2s, color 0.2s;
  }
  .gh-stars:hover {
    color: var(--sl-color-text-accent);
    border-color: var(--sl-color-text-accent);
  }
  .gh-stars svg {
    flex-shrink: 0;
  }
  .gh-stars-divider {
    width: 1px;
    height: 1rem;
    background-color: var(--sl-color-gray-5);
  }
</style>
